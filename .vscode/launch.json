    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'kvwalker'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=kvwalker",
                    "--package=kvwalker"
                ],
                "filter": {
                    "name": "kvwalker",
                    "kind": "bin"
                }
            },
            "args": [
                "consul",
                "-t",
                "0a665b2a-b6bb-0e0f-baff-ac4547dbc3b3",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'kvwalker'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=kvwalker",
                    "--package=kvwalker"
                ],
                "filter": {
                    "name": "kvwalker",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
